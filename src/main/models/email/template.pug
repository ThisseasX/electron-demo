style.
  html {
    box-sizing: border-box;
  }

  *,
  **::before,
  **::after {
    box-sizing: inherit;
  }

  body {
    margin: 0;
  }

  h1 {
    color: blue;
    margin: 0;
  }

  .header {
    background-color: #d3d3d3;
    padding: 16px 24px;
    border-radius: 4px;
  }

  p {
    font-size: 20px;
  }


.header
  h1 Hello #{name}!
p You have a new message from !{sender}!
